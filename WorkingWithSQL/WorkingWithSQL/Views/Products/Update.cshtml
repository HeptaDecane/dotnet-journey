@model WorkingWithSQL.Models.Product
@{
    ViewData["Title"] = "Product";
}

<div class="text-center">
    <h1 class="display-4">Product</h1>
</div>
<hr/>
<div>
    <form asp-controller="Products" asp-action="Update" asp-route-id="@Model.Id" method="post">
        <div class="mb-3">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="Name" id="name" value="@Model.Name" required/>
        </div>
        <div class="mb-3">
            <label for="description">Description</label>
            <textarea class="form-control" name="Description" id="description" required>@Model.Description</textarea>
        </div>
        <div class="mb-3">
            <label for="category">Category</label>
            <select class="form-select" name="Category" id="category" required>
                <option value="" selected>select</option>
                <option value="men`s clothing">Men's Clothing</option>
                <option value="smartphones">Smartphones</option>
                <option value="laptops">Laptops</option>
                <option value="home decor">Home Decor</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="imageUrl">Image URL</label>
            <input type="url" class="form-control" name="ImageUrl" id="imageUrl" value="@Model.ImageUrl" required/>
        </div>
        <button class="btn btn-primary" type="submit">Save</button>
        <input type="number" name="Id" id="id" value="@Model.Id" hidden/>
    </form>
</div>